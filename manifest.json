{
  "manifest_version": 3,
  "name": "Enhance HCMUTE Library",
  "version": "3.0",
  "description": "Trợ lý học tập: Tải tài liệu, OCR và hỗ trợ giao diện cho Thư viện số HCMUTE.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://thuvienso.hcmute.edu.vn/*"],
  "content_scripts": [
    {
      "matches": ["*://thuvienso.hcmute.edu.vn/doc_view/web/view.php*"],
      "js": ["content_script.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://thuvienso.hcmute.edu.vn/document/*"],
      "js": ["redirector.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injector.js"],
      "matches": ["<all_urls>"]
    }
  ]
}