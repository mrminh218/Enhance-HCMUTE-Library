{
  "manifest_version": 3,
  "name": "Enhance HCMUTE Library V6",
  "version": "6.1",
  "description": "Tải tài liệu PDF chuẩn tên file (Sử dụng Memory Cache).",
  
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["*://thuvienso.hcmute.edu.vn/*"],
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://thuvienso.hcmute.edu.vn/doc_view/web/view.php*"],
      "js": ["content_script.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://thuvienso.hcmute.edu.vn/doc/*",
        "*://thuvienso.hcmute.edu.vn/document/*"
      ],
      "js": ["tracker.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injector.js"],
      "matches": ["<all_urls>"]
    }
  ]
}